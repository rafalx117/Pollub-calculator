<Page
    x:Class="Pollub_calculator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pollub_calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="mainGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ScrollViewer HorizontalAlignment="Left" Height="100" Margin="810,330,0,0" VerticalAlignment="Top" Width="100"/>
        <ScrollViewer x:Name="scrollViewer" HorizontalAlignment="Left" Height="487" Margin="51,57,0,0" VerticalAlignment="Top" Width="1168"/>
        <Button x:Name="addSubjectButton" Content="Dodaj przedmiot" HorizontalAlignment="Left" Margin="90,642,0,0" VerticalAlignment="Top" Click="createSet"/>
        <Button x:Name="calculateAvgButton" Content="Oblicz średnią" HorizontalAlignment="Left" Margin="278,642,0,0" VerticalAlignment="Top" Click="setAverageLabel"/>
        <TextBox x:Name="result" HorizontalAlignment="Left" Margin="524,642,0,0" TextWrapping="Wrap" Text="Tutaj pojawi się srednia" VerticalAlignment="Top" Width="364" IsEnabled="False"/>
        <Button x:Name="debugWrite" Content="Debug" HorizontalAlignment="Left" Margin="1136,642,0,0" VerticalAlignment="Top" Click="debugWrite_Click"/>
    </Grid>
</Page>
